# Environment variables for Paper Radar Backend

# =============================================================================
# LOCAL DEVELOPMENT MODE (No Docker Required!)
# =============================================================================
# Set to true to use SQLite + file-based cache (data persists locally)
USE_LOCAL_STORAGE=true
LOCAL_DATA_DIR=./data

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Database (PostgreSQL) - matches docker-compose.yml
# (Only used when USE_LOCAL_STORAGE=false)
DATABASE_URL=postgresql://paperradar:paperradar_password@localhost:5432/paperradar

# Redis Cache (Only used when USE_LOCAL_STORAGE=false)
REDIS_URL=redis://localhost:6379

# Security - Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# Groq API (for AI summaries) - Get from: https://console.groq.com
GROQ_API_KEY=

# GitHub Token (for implementation discovery) - Get from: GitHub Settings > Developer Settings > Personal Access Tokens
GITHUB_TOKEN=

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Environment: development | staging | production
ENVIRONMENT=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Database Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# JWT Token Expiry (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Rate Limits
ARXIV_REQUESTS_PER_SECOND=2.5
SEMANTIC_SCHOLAR_REQUESTS_PER_5MIN=100
GROQ_REQUESTS_PER_MINUTE=30

# Rate Limiting
SEMANTIC_SCHOLAR_REQUESTS_PER_5MIN=100
GROQ_REQUESTS_PER_MINUTE=30

# Caching
USE_LOCAL_STORAGE=true
LOCAL_DATA_DIR=./data

# Embeddings (optional)
EMBEDDING_MODEL=allenai/specter2
FAISS_INDEX_PATH=./data/embeddings